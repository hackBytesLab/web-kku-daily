rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthed() { return request.auth != null; }

    // Allow reads to all for demo; require auth for writes
    match /{allPaths=**} {
      allow read: if true;
    }

    // Uploads only to markers/..., images only, max 5MB
    match /markers/{markerId}/{fileName} {
      allow write: if isAuthed()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow read: if true;
    }
  }
}

